# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt,patch}]
insert_final_newline = false
trim_trailing_whitespace = false

[{Makefile}]
indent_style = tab

[*.sh]
switch_case_indent = true
binary_next_line = true
